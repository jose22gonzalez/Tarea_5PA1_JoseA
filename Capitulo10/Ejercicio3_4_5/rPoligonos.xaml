<Window x:Class="Tarea_5PA1_JoseA.Capitulo10.Ejercicio3_4_5.rPoligonos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea_5PA1_JoseA.Capitulo10.Ejercicio3_4_5"
        mc:Ignorable="d"
        Title="rPoligonos" Height="450" Width="400">
    <Grid>
         <StackPanel Orientation="Vertical" Margin="10,10,10,0"  VerticalAlignment="Top"> 
            <Label Content="Lado 1"/>
            <TextBox x:Name = "Lado1Textbox" Text= "{Binding Lado1}" />

            <Label Content="Lado 2:"/>
            <TextBox x:Name="Lado2TextBox" Text="{Binding Lado2}"/>

            <Label Content="Lado 3:"/>
            <TextBox x:Name="Lado3TextBox" Text="{Binding Lado3}"/>


            <StackPanel 
                        Margin="0,20,0,0"                      
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" >
                <Button Content="Calcular Perimetro" Click="PerimetroButton_Click"/>
            </StackPanel>

            <Label Content="Perimetro"/>
            <TextBox x:Name="PerimetroTextBox"/>
        </StackPanel>
    </Grid>
</Window>
